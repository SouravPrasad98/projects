<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Retailer_main_activity1">


    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="0dp"
        android:background="@color/limegreen"
        android:padding="5dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp">


        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:id="@+id/profileIv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/key"
            android:src="@drawable/ic_baseline_person_24"
            app:c_border="true"
            app:c_border_color="@color/Snow"
            app:c_border_width="1dp"

            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/profileIv"
            android:text="ShopName"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />



        <ImageButton
            android:id="@+id/settingsBtn"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:background="@null"

            android:src="@drawable/ic_baseline_settings_24" />


        <ImageButton
            android:layout_width="35dp"
            android:id="@+id/logoutbt"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@color/limegreen"
            android:src="@drawable/ic_baseline_power_settings_new_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_below="@id/profileIv"
            android:background="@drawable/shaperec"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/productstab"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/shaperec01"
                android:text="CATEGORY"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp">

            </TextView>



        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/categoriesRl"
        android:background="@color/white"
        android:layout_below="@+id/toolbarRl">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




                <TextView
                    android:id="@+id/categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/montserrat"
                    android:padding="1dp"
                    android:text="Categories"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:textColorHighlight="@color/black"
                    android:elevation="10dp"
                    android:textSize="20sp"></TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:padding="5dp"
                    android:background="@drawable/categories_button"
                    android:layout_margin="5dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/retailer_pulses"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/foodgrain"

                        android:layout_centerInParent="true"
                        android:text="Foodgrains,Oil and Masala"
                        android:textSize="18sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/black"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:padding="5dp"
                    android:background="@drawable/categories_button"
                    android:layout_margin="5dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/retailer_vegetables"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fruitsandveg"

                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/montserrat"
                        android:text="Fruits and Vegetables"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:padding="5dp"
                    android:background="@drawable/categories_button"
                    android:layout_margin="5dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/retailer_fruits"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/frozenfood"

                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/montserrat"
                        android:text="Frozen Food"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:padding="5dp"
                    android:background="@drawable/categories_button"
                    android:layout_margin="5dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/retailer_soaps"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/eggmeat"

                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/montserrat"
                        android:text="Eggs,Meat,Fish"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:padding="5dp"
                    android:background="@drawable/categories_button"
                    android:layout_margin="5dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/retailer_flour"
                        />
                    <TextView
                        android:id="@+id/breakfastdairy"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Breakfast and Dairy"
                        android:textSize="18sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/black"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:padding="5dp"
                    android:background="@drawable/categories_button"
                    android:layout_margin="5dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/retailer_spices"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/beverages"

                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Beverages"
                        android:textSize="18sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/black"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:padding="5dp"
                    android:background="@drawable/categories_button"
                    android:layout_margin="5dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/retailer_biscuits"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/Biscuits"

                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/montserrat"
                        android:text=" Biscuits,Snacks,Chocolate"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:padding="5dp"
                    android:background="@drawable/categories_button"
                    android:layout_margin="5dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/retailer_snacks"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Others"
                        android:textSize="18sp"
                        android:id="@+id/others"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/black"
                        />
                </RelativeLayout>


            </LinearLayout>

    </RelativeLayout>




</RelativeLayout>