<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/items_info"
        android:elevation="5dp"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/retailerRecycleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:paddingStart="5dp"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/retailerRecycleQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/retailerRecycleName"

            />
        <TextView
            android:id="@+id/retailerRecycleScale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qn"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:paddingStart="1dp"
            android:layout_toRightOf="@+id/retailerRecycleQuantity"
            />
        <TextView
            android:id="@+id/retailerRecyclePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:layout_toRightOf="@+id/retailerRecycleScale"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs."
            android:textSize="25sp"
            android:textColor="@color/black"
            android:paddingStart="1dp"
            android:layout_toRightOf="@+id/retailerRecyclePrice"
            />
        <Button
            android:id="@+id/retailerItemDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Delete"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@color/tomatored"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>