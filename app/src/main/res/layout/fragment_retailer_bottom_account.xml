<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="25dp"
    android:orientation="vertical"
    tools:context=".Retailer.RetailerBottomAccount">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@drawable/account_profile_background"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="30sp"
            android:textColor="@color/black"

            android:layout_marginLeft="10dp"
            android:fontFamily="@font/montserrat"/>
        <TextView
            android:id="@+id/retailerProfileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/montserrat"/>
        <TextView
            android:id="@+id/retailerProfileEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Email"
            android:textSize="20sp"
            android:textColor="@color/black"

            android:fontFamily="@font/montserrat"/>
        <TextView
            android:id="@+id/retailerProfileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Number"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat"/>
    </LinearLayout>
    <Button
        android:id="@+id/retailerAccountItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Items I have "
        android:clickable="true"
        android:textSize="25sp"
        android:textAlignment="viewStart"
        android:fontFamily="@font/montserrat"
        android:background="@drawable/categories_button"
        />
    <Button
        android:id="@+id/retailerAccountItemsBought"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:text="Items Bought"
        android:textSize="25sp"
        android:textAlignment="viewStart"
        android:fontFamily="@font/montserrat"
        android:background="@drawable/categories_button"
        />
    <Button
        android:id="@+id/retailerAccountItemsSold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:text="Items I Sold"
        android:textSize="25sp"
        android:textAlignment="viewStart"
        android:fontFamily="@font/montserrat"
        android:background="@drawable/categories_button"
        />
    <Button
        android:id="@+id/retailerLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:text="Logout"
        android:textColor="@color/tomatored"
        android:textSize="25sp"
        android:textAlignment="viewStart"
        android:fontFamily="@font/montserrat"
        android:background="@drawable/categories_button"
        />


</LinearLayout>