<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:background="@color/white"

    tools:context=".Wholeseller_login">

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:background="@color/limegreen"
        android:padding="5dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/GroceryClan"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/key"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/design"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="60dp"
        android:layout_centerHorizontal="true"/>


    <EditText
        android:layout_below="@+id/key"
        android:id="@+id/emaillidddd"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Enter Email"
        android:importantForAutofill="no"
        android:inputType="textVisiblePassword"
        android:padding="10dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password1"
        android:layout_below="@+id/emaillidddd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:hint="@string/prompt_password"
        android:textColorHint="@color/black"
        android:imeActionLabel="Login"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:selectAllOnFocus="true"
        android:importantForAutofill="no" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgotT"
        android:text="Forgot Password"
        android:layout_below="@+id/password1"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/login"
        android:backgroundTint="@color/tomatored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="120dp"
        android:text="Login"
        android:textColor="@color/white"
        android:layout_below="@+id/forgotT" />


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="315dp"
        android:layout_height="202dp"
        android:layout_below="@+id/login"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/wholesaler2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noacc"
        android:textColor="@color/black"
        android:text="Not registered with us? Sign up"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp" />


</RelativeLayout>